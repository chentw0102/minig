<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>miniG</groupId>
	<artifactId>miniG</artifactId>
	<packaging>war</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>gwt-maven-plugin</artifactId>
				<version>2.1.0</version>
				<configuration>
					<extraJvmArgs>-Xmx512M -Xss1024k</extraJvmArgs>
					<disableCastChecking>true</disableCastChecking>
					<draftCompile>false</draftCompile>
					<strict>false</strict>
					<logLevel>TRACE</logLevel>
					<module>fr.aliasource.webmail.WebmailUI</module>
					<disableClassMetadata>true</disableClassMetadata>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>compile</goal>
							<goal>test</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
					<warName>minig</warName>
					<failOnMissingWebXml>true</failOnMissingWebXml>
					<packagingExcludes>WEB-INF/lib/gwt-user-*.jar</packagingExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.7</version>
			<type>jar</type>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>commons-fileupload</groupId>
			<artifactId>commons-fileupload</artifactId>
			<version>1.2</version>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
		</dependency>
		<dependency>
			<groupId>com.google.gwt</groupId>
			<artifactId>gwt-user</artifactId>
			<version>2.1.0</version>
		</dependency>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>2.4</version>
		</dependency>
		<dependency>
			<groupId>minig</groupId>
			<artifactId>minig-theme</artifactId>
			<version>1</version>
			<scope>system</scope>
			<systemPath>${basedir}/theme/minig-theme.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>gwt-dnd-tom</groupId>
			<artifactId>gwt-dnd-tom</artifactId>
			<version>3.0.1-tom.jar</version>
			<scope>system</scope>
			<systemPath>${basedir}/war/WEB-INF/lib/gwt-dnd-3.0.1-tom.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>emite</groupId>
			<artifactId>emite</artifactId>
			<version>0.5.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/war/WEB-INF/lib/emite-0.5.0.jar</systemPath>
		</dependency>
		<dependency>
			<groupId>suco</groupId>
			<artifactId>suco</artifactId>
			<version>0.7.0</version>
			<scope>system</scope>
			<systemPath>${basedir}/war/WEB-INF/lib/suco-0.7.0.jar</systemPath>
		</dependency>
	</dependencies>
	<url>http://code.google.com/p/minig/</url>
	<version>3.0-SNAPSHOT</version>
</project>

